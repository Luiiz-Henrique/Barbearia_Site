<style>
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }
  /*footer{
    position: fixed;
    left: 0;
    bottom: 0;
  }*/
  body{
    text-align: center;
    background-color: #F5F2EB;
  }

  form {
    margin: 2em 0;
    width: 450px;
    margin-left: 50%;
    transform: translateX(-50%);
  } 
 
.input-text {
  display: flex;
  flex-flow: column-reverse;
  margin-bottom: 1em;
}

label, input {
  transition: all 0.2s;
  touch-action: manipulation;
}

input {
  width: 450px;
  height: 60px;
  font-size: 24px;
  border: 2.5px solid #1D1C1C;
  font-family: GantariSB;
  /*-webkit-appearance: none;*/
  border-radius: 5px;
  padding: 0 20px;
  cursor: text;
  background-color: #F5F2EB;
  display: flex;
}

input:focus {
  outline: 0;
  border: 2.5px solid #C51006;
}

label {
  font-size: 24px;
  letter-spacing: 0.05em;
  margin-left: 20px;
  background-color: #F5F2EB;
  width: 70px;
}

input:placeholder-shown + label {
  cursor: text;
  max-width: 66.66%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  transform-origin: left top;
  transform: translate(0, 2.7rem) scale(1);
}

::-webkit-input-placeholder {
  opacity: 0;
  transition: inherit;
}

input:focus::-webkit-input-placeholder {
  opacity: 1;
}

input:not(:placeholder-shown) + label{
  transform: translate(0, 10px) scale(1);
  cursor: pointer;
  font-size: 20px;
}

input:focus + label {
  transform: translate(0, 10px) scale(1);
  cursor: pointer;
  color: #C51006;
  font-size: 20px;
}

@media (max-width: 460px) {
  form, input {
    width: 97vw;
  }
}

</style>

<%- include('./partials/header') %>

<h1 class="title" >ENTRAR</h1>

    <div class="enfeite">
      <div class="linha"></div>
      <img src="./images/bigodin.png" alt="">
      <div class="linha"></div>
    </div>

<form action="">
  <div class="input-text">
    <input type="email" name="email" id="email" placeholder="Digite seu email" autocomplete="off" required>
    <label for="email">Email</label>
  </div>
  
  <div class="input-text">
    <input type="password" name="password" id="password" placeholder="Digite sua senha" autocomplete="off" required>
    <label for="password">Senha</label>
  </div>
  </form>

<footer>
  <%- include('./partials/footer') %>
</footer>

</body>
</html>

